<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/label_name"
        android:layout_width="175dp"
        android:layout_height="99dp"
        android:layout_marginTop="50dp"
        android:text="@string/label_name"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="426dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/label_name"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/label_name"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/label_price"
        android:layout_width="179dp"
        android:layout_height="88dp"
        android:layout_below="@+id/label_name"
        android:layout_marginTop="110dp"
        android:text="@string/label_price"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="156dp"
        android:layout_height="91dp"
        android:layout_below="@+id/label_price"
        android:layout_marginTop="164dp"
        android:onClick="insert"
        android:text="@string/button_add"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="166dp"
        android:layout_height="94dp"
        android:layout_alignBottom="@+id/button_add"
        android:layout_marginBottom="-240dp"
        android:text="@string/button_back"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/input_price"
        android:layout_width="423dp"
        android:layout_height="88dp"
        android:layout_alignTop="@+id/label_price"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/label_price" />


</RelativeLayout>